{
  "name": "@simplix-react/form",
  "version": "0.0.2",
  "description": "TanStack Form hooks derived from @simplix-react/contract schemas",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run --passWithNoTests",
    "clean": "rm -rf dist .turbo"
  },
  "peerDependencies": {
    "@simplix-react/contract": "workspace:*",
    "@simplix-react/react": "workspace:*",
    "@tanstack/react-form": ">=1.0.0",
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0",
    "zod": ">=4.0.0"
  },
  "devDependencies": {
    "@simplix-react/config-eslint": "workspace:*",
    "@simplix-react/config-typescript": "workspace:*",
    "@simplix-react/contract": "workspace:*",
    "@simplix-react/react": "workspace:*",
    "@tanstack/react-form": "^1.0.0",
    "@tanstack/react-query": "^5.0.0",
    "@types/react": "^19.0.0",
    "eslint": "^9.39.2",
    "react": "^19.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0",
    "zod": "^4.0.0"
  }
}
