import { QueryClient, QueryClientProvider } from "@tanstack/react-query";
import type { ReactNode } from "react";
{{#if enableI18n}}
import { I18nProvider } from "@simplix-react/i18n/react";
import { i18nAdapter } from "../i18n/index.js";
{{/if}}
{{#if enableAuth}}
import { AuthProvider } from "@simplix-react/auth/react";
import { auth } from "../auth/index.js";
{{/if}}
{{#if enableAccess}}
import { AccessProvider } from "@simplix-react/access/react";
import { accessPolicy } from "../access/index.js";
{{/if}}

const queryClient = new QueryClient({
  defaultOptions: {
    queries: {
      staleTime: 1000 * 60,
      retry: 1,
    },
  },
});

export function AppProviders({ children }: { children: ReactNode }) {
  return (
{{#if enableI18n}}
    <I18nProvider adapter={i18nAdapter}>
{{/if}}
{{#if enableAuth}}
      <AuthProvider auth={auth}>
{{/if}}
{{#if enableAccess}}
{{#if enableAuth}}
        <AccessProvider policy={accessPolicy} auth={auth}>
{{else}}
        <AccessProvider policy={accessPolicy}>
{{/if}}
{{/if}}
          <QueryClientProvider client={queryClient}>
            {children}
          </QueryClientProvider>
{{#if enableAccess}}
        </AccessProvider>
{{/if}}
{{#if enableAuth}}
      </AuthProvider>
{{/if}}
{{#if enableI18n}}
    </I18nProvider>
{{/if}}
  );
}
