{
  "name": "simplix-react",
  "version": "0.1.3",
  "private": true,
  "description": "Package-first React framework that auto-generates reusable domain packages from OpenAPI specs",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "docs:api": "typedoc",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "sync-version": "node --input-type=module -e \"import{readFileSync,writeFileSync}from'fs';const v=JSON.parse(readFileSync('package.json','utf8')).version;const p='packages/simplix-react/package.json';const d=JSON.parse(readFileSync(p,'utf8'));d.version=v;writeFileSync(p,JSON.stringify(d,null,2)+'\\n');console.log('simplix-react version synced to '+v)\"",
    "prerelease": "pnpm sync-version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "turbo": "^2.7.5",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.10.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=20.0.0"
  }
}
