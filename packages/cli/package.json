{
  "name": "@simplix-react/cli",
  "version": "0.1.2",
  "description": "CLI for scaffolding and validating simplix-react projects",
  "type": "module",
  "sideEffects": false,
  "bin": {
    "simplix": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run --passWithNoTests",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "@simplix-react/contract": "workspace:*",
    "commander": "^13.1.0",
    "handlebars": "^4.7.8",
    "jiti": "^2.4.2",
    "ora": "^8.2.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@simplix-react/config-eslint": "workspace:*",
    "@simplix-react/config-typescript": "workspace:*",
    "@types/prompts": "^2.4.9",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
